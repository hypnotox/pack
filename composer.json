{
	"name": "hypnotox/pack",
	"description": "PHP package offering immutable collections.",
	"type": "library",
	"license": "MIT",
	"authors": [
		{
			"name": "Josua MÃ¼ller",
			"email": "hypnotox@pm.me"
		}
	],
	"minimum-stability": "stable",
	"config": {
		"preferred-install": {
			"*": "dist"
		},
		"sort-packages": true
	},
	"autoload": {
		"psr-4": {
			"HypnoTox\\Pack\\": "src/"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"Tests\\": "tests/"
		}
	},
	"require": {
		"php": ">=8.1"
	},
	"require-dev": {
		"phpunit/phpunit": "^9.5",
		"vimeo/psalm": "^4.15",
		"friendsofphp/php-cs-fixer": "^3.4"
	},
	"scripts": {
		"test": [
			"@fix",
			"@lint",
			"@unit"
		],
		"unit": "vendor/bin/phpunit",
		"fix": "vendor/bin/php-cs-fixer fix --allow-risky=yes",
		"fix-verbose": "@fix -vvv",
		"lint": "vendor/bin/psalm --output-format=phpstorm --no-cache",
		"lint-verbose": "@lint --show-info=true"
	}
}

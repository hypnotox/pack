{
    "name": "hypnotox/pack",
    "description": "PHP package offering immutable collections.",
    "type": "library",
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "vimeo/psalm": "^4.15",
        "friendsofphp/php-cs-fixer": "^3.4"
    },
	"config": {
		"preferred-install": {
			"*": "dist"
		},
		"sort-packages": true
	},
    "autoload": {
        "psr-4": {
            "HypnoTox\\Pack\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Josua MÃ¼ller",
            "email": "hypnotox@pm.me"
        }
    ],
	"minimum-stability": "stable",
	"require": {
        "php": ">=8.0"
    },
	"scripts": {
		"fix": "vendor/bin/php-cs-fixer fix --allow-risky=yes",
		"fix-verbose": "vendor/bin/php-cs-fixer fix -vvv --allow-risky=yes",
		"lint": "vendor/bin/psalm --output-format=phpstorm",
		"lint-verbose": "vendor/bin/psalm --output-format=phpstorm --show-info=true"
	}
}
